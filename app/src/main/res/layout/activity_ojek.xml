<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/quantum_orange"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true"
        android:theme="@style/AppTheme">

        <LinearLayout
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:textColor="#000000"
                android:text="Kantor Pos DC Cibinong"/>

            <fragment
                android:id="@+id/autocomplete_support_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                />

            <TextView
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:text="Tujuan"/>

            <fragment
                android:id="@+id/lokasi2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                />

            <TextView
                android:id="@+id/custom_fields_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="INFORMASI"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_jarak"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:text="Jarak : "/>

            <TextView
                android:id="@+id/rute1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Waktu :"
                android:textColor="#000000"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/rute2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rute2"
                android:textColor="#000000"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/rute3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rute3"
                android:textColor="#000000"
                android:textSize="8sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <fragment
        android:id="@+id/mapNearBy"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="230px"/>


</RelativeLayout>
